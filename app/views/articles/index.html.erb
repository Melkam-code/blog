<h1>Listing articles</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Action</th>
    <th>Action</th>
    <th>Action</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-sm' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-sm' %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-sm' %></td>
    </tr>
  <% end %>
</table>

<%= link_to new_article_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Create Your Article
<% end %>